-- Code Runner: Compile and Run in external Kitty terminal
map("n", "<leader>r", function()
  local filepath = vim.fn.expand("%:p")
  
  -- Save file first
  vim.cmd("write")
  
  -- Show notification
  vim.notify("ðŸš€ Ejecutando: " .. vim.fn.expand("%:t"), vim.log.levels.INFO)
  
  -- Execute script completely detached from nvim
  vim.loop.spawn("bash", {
    args = {"-c", string.format("'%s' '%s' &", 
      vim.fn.expand("~/.config/hypr/UserScripts/CodeRunner.sh"),
      filepath
    )},
    detach = true
  })
end, { desc = "Compile and Run code" })
